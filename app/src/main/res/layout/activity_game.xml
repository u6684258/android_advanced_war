<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/outside_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".Game">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <com.example.assignapp2019s1.MapView
        android:id="@+id/mapView2"
        android:layout_width="731"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:id="@+id/Left"
        android:layout_width="60"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="645dp"
        android:layout_marginRight="645dp"
        android:layout_marginBottom="61dp"
        android:alpha="0.5"
        android:onClick="button_left"
        android:text="<-" />

    <Button
        android:id="@+id/right"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="500dp"
        android:layout_marginRight="500dp"
        android:layout_marginBottom="59dp"
        android:alpha="0.5"
        android:onClick="button_right"
        android:text="->" />

    <Button
        android:id="@+id/up"
        android:layout_width="60"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="576dp"
        android:layout_marginRight="576dp"
        android:layout_marginBottom="122dp"
        android:alpha="0.5"
        android:onClick="button_up"
        android:text="^" />

    <Button
        android:id="@+id/down"
        android:layout_width="60"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="574dp"
        android:layout_marginRight="574dp"
        android:layout_marginBottom="6dp"
        android:alpha="0.5"
        android:onClick="button_down"
        android:text="V" />

    <Button
        android:id="@+id/button_A"
        android:layout_width="60"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="168dp"
        android:layout_marginRight="168dp"
        android:layout_marginBottom="29dp"
        android:alpha="0.5"
        android:text="A" />

    <Button
        android:id="@+id/button_B"
        android:layout_width="60"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:layout_marginBottom="29dp"
        android:alpha="0.5"
        android:text="B" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</RelativeLayout>